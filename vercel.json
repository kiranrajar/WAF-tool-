{
    "rewrites": [
        {
            "source": "/dashboard",
            "destination": "/index.html"
        },
        {
            "source": "/dashboard/(.*)",
            "destination": "/$1"
        },
        {
            "source": "/api/stats",
            "destination": "/api/index.js"
        },
        {
            "source": "/api/config",
            "destination": "/api/index.js"
        },
        {
            "source": "/api/logs",
            "destination": "/api/index.js"
        },
        {
            "source": "/api/unblock",
            "destination": "/api/index.js"
        },
        {
            "source": "/health",
            "destination": "/api/index.js"
        },
        {
            "source": "/((?!dashboard/).*)",
            "destination": "/api/index.js"
        }
    ],
    "functions": {
        "api/index.js": {
            "maxDuration": 15
        }
    }
}