{
    "version": 2,
    "name": "aegis-shield-waf",
    "buildCommand": "cd backend && npm install",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api"
        },
        {
            "source": "/score",
            "destination": "/ml/api.py"
        },
        {
            "source": "/health",
            "destination": "/api"
        },
        {
            "source": "/",
            "destination": "/dashboard/index.html"
        }
    ],
    "headers": [
        {
            "source": "/dashboard/:path*",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                }
            ]
        }
    ],
    "functions": {
        "api/index.js": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
}